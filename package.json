{
  "name": "Pangea",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "flow && jest __tests__",
    "test:e2e:debug": "detox test -c ios.sim.debug && detox test -c android.emu.debug",
    "test:e2e:debug:build": "detox build -c ios.sim.debug && detox build -c android.emu.debug",
    "test:e2e:release": "detox test -c ios.sim.release && detox test -c android.emu.release",
    "test:e2e:release:build": "detox build -c ios.sim.release && detox build -c android.emu.release",
    "test:e2e:bitrise:build": "detox build -c ios.sim.release.bitrise && detox build -c android.emu.release.bitrise",
    "test:e2e:bitrise": "detox test -c ios.sim.release.bitrise && detox test -c android.emu.release.bitrise",
    "test:coveralls": "npm run test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "ios": "flow && node_modules/.bin/react-native run-ios",
    "android": "flow && node_modules/.bin/react-native run-android",
    "postinstall": "./node_modules/.bin/rn-nodeify --install 'stream,buffer,vm,crypto,string_decoder,events,assert' --hack",
    "docs": "node_modules/.bin/documentation build src/services/container.js -f md > docs/main.md",
    "build:ios": "react-native bundle --entry-file='index.js' --bundle-output='./ios/Pangea/main.jsbundle' --dev=false --platform='ios' --assets-dest='./ios'"
  },
  "dependencies": {
    "BITNATION-Pangea-libs": "git+https://github.com/Bit-Nation/BITNATION-Pangea-libs.git#0.3.1",
    "assert": "^1.4.1",
    "awilix": "^3.0.1",
    "bignumber.js": "^5.0.0",
    "buffer": "^4.9.1",
    "eslint": "^4.13.1",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-react-native": "^3.2.0",
    "events": "^1.1.1",
    "fetch-everywhere": "^1.0.5",
    "hoist-non-react-statics": "^2.3.1",
    "lodash": "^4.17.4",
    "native-base": "^2.3.5",
    "prop-types": "^15.6.0",
    "react": "16.0.0",
    "react-native": "0.51.0",
    "react-native-camera": "^0.13.0",
    "react-native-config": "^0.11.2",
    "react-native-crypto": "^2.1.2",
    "react-native-dropdownalert": "^3.1.2",
    "react-native-eth-daemon": "git+https://github.com/Bit-Nation/react-native-eth-daemon.git#development",
    "react-native-gifted-chat": "^0.3.0",
    "react-native-image-crop-picker": "^0.19.1",
    "react-native-keyboard-aware-scroll-view": "^0.4.3",
    "react-native-modal": "^4.1.1",
    "react-native-modal-dropdown": "^0.6.0",
    "react-native-navigation": "^1.1.319",
    "react-native-qrcode": "^0.2.6",
    "react-native-qrcode-scanner": "0.0.29",
    "react-native-randombytes": "^3.0.0",
    "react-native-responsive": "^1.0.2",
    "react-native-segmented-control-tab": "^3.2.1",
    "react-native-sensitive-info": "^5.1.0",
    "react-native-simple-dialogs": "^0.3.1",
    "react-native-swiper": "^1.5.13",
    "react-native-vector-icons": "^4.4.2",
    "react-navigation": "^1.0.0-beta.22",
    "react-redux": "^5.0.6",
    "readable-stream": "^1.0.33",
    "realm": "^2.1.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.4.0",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0",
    "rn-nodeify": "^8.3.0",
    "stream-browserify": "^1.0.0",
    "string_decoder": "^0.10.31",
    "vm-browserify": "0.0.4"
  },
  "devDependencies": {
    "babel-jest": "22.0.3",
    "babel-preset-react-native": "4.0.0",
    "coveralls": "^3.0.0",
    "detox": "^7.0.1",
    "documentation": "^5.3.5",
    "jest": "^22.0.3",
    "react-test-renderer": "16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "<root-dir>/node_modules",
      "node_modules/(realm)/"
    ],
    "moduleNameMapper": {
      "^image![a-zA-Z0-9$_-]+$": "GlobalImageStub",
      "^[@./a-zA-Z0-9$_-]+\\.(png|gif)$": "RelativeImageStub"
    },
    "collectCoverageFrom": [
      "!**/styles.js",
      "**/**/**/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "collectCoverage": true
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "__e2e__/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/Pangea.app",
        "build": "xcodebuild -workspace ios/Pangea.xcworkspace -scheme Pangea -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/Pangea.app",
        "build": "xcodebuild -workspace ios/Pangea.xcworkspace -scheme Pangea -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build":
        "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build":
        "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "android.emu.release.bitrise": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build":"cd android && fastlane dev_build && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "ios.sim.release.bitrise": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/Pangea.app",
        "build": "cd ios && fastlane prepare_dev_adhoc && cd .. && xcodebuild -workspace ios/Pangea.xcworkspace -scheme Pangea -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
