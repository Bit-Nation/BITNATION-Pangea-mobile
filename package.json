{
  "name": "Pangea",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "flow && jest",
    "test:coverage": "flow && jest --coverage",
    "test:coveralls": "yarn test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "ios": "flow && node_modules/.bin/react-native run-ios",
    "android": "flow && node_modules/.bin/react-native run-android",
    "postinstall": "./node_modules/.bin/rn-nodeify --install 'stream,buffer,vm,crypto,string_decoder,events' --hack"
  },
  "dependencies": {
    "BITNATION-Panthalassa": "git+https://github.com/Bit-Nation/Panthalassa.git#develop",
    "awilix": "^3.0.0",
    "buffer": "^5.0.8",
    "eventemitter3": "^3.0.0",
    "events": "^1.1.1",
    "native-base": "^2.3.5",
    "react": "16.0.0",
    "react-native": "0.51.0",
    "react-native-config": "^0.11.2",
    "react-native-crypto": "^2.1.2",
    "react-native-eth-daemon": "git+https://github.com/Bit-Nation/react-native-eth-daemon.git#development",
    "react-native-randombytes": "^3.0.0",
    "react-native-sensitive-info": "^5.2.0",
    "rn-nodeify": "^8.3.0",
    "stream-browserify": "^1.0.0",
    "string_decoder": "^0.10.31",
    "vm-browserify": "0.0.4"
  },
  "devDependencies": {
    "babel-jest": "22.0.3",
    "babel-preset-react-native": "4.0.0",
    "coveralls": "^3.0.0",
    "jest": "22.0.3",
    "react-test-renderer": "16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|BITNATION-Panthalassa|react-native-sensitive-info)"
    ]
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "browser": {
    "crypto": "react-native-crypto",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  }
}
